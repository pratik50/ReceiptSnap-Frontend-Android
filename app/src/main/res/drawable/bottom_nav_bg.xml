<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Top Shadow (with padding) -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="-8dp"
    android:bottom="0dp">
    <shape android:shape="rectangle">
        <gradient
            android:angle="90"
        android:startColor="#30000000"
        android:endColor="@android:color/transparent"
        android:type="linear" />
        <corners
            android:topLeftRadius="44dp"
        android:topRightRadius="@dimen/_23sdp" />
        <padding android:top="4dp" />
    </shape>
</item>

    <!-- White background -->
<item>
<shape android:shape="rectangle">
    <solid android:color="@android:color/white" />
    <corners
        android:topLeftRadius="@dimen/_23sdp"
        android:topRightRadius="@dimen/_23sdp" />
</shape>
</item>
    </layer-list>