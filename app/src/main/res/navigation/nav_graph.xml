<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/splashFragment"
    android:id="@+id/nav_graph">

    <!-- Splash -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.pratik.receiptsnap.presentation.SplashFragment"
        android:label="splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_splashFragment_to_scanFragment"
            app:destination="@id/scanFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>

    <!-- Login -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.pratik.receiptsnap.presentation.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_scanFragment"
            app:destination="@id/scanFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment"/>
    </fragment>

    <!-- Signup -->
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.pratik.receiptsnap.presentation.auth.SignupFragment"
        android:label="Signup"
        tools:layout="@layout/fragment_signup">
        <action
            android:id="@+id/action_signupFragment_to_scanFragment"
            app:destination="@id/scanFragment"/>
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true"/>
    </fragment>

    <!-- Scan (Dashboard) -->
    <fragment
        android:id="@+id/scanFragment"
        android:name="com.pratik.receiptsnap.presentation.scan.ScanFragment"
        android:label="Scan"
        tools:layout="@layout/fragment_scan">
        <action
            android:id="@+id/action_scanFragment_to_filePreviewFragment"
            app:destination="@id/filePreviewFragment"/>
        <action
            android:id="@+id/action_scanFragment_to_organizeFragment"
            app:destination="@id/organizeFragment" />
        <action
            android:id="@+id/action_scanFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_scanFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
    </fragment>

    <!-- Organize -->
    <fragment
        android:id="@+id/organizeFragment"
        android:name="com.pratik.receiptsnap.presentation.organize.OrganizeFragment"
        android:label="Organize"
        tools:layout="@layout/fragment_organize" >
        <action
            android:id="@+id/action_organizeFragment_to_filePreviewFragment"
            app:destination="@id/filePreviewFragment" />
        <action
            android:id="@+id/action_organizeFragment_to_scanFragment"
            app:destination="@id/scanFragment" />
        <action
            android:id="@+id/action_organizeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- Settings -->
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.pratik.receiptsnap.presentation.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_scanFragment"
            app:destination="@id/scanFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_organizeFragment2"
            app:destination="@id/organizeFragment" />
    </fragment>

    <!-- File Preview -->
    <fragment
        android:id="@+id/filePreviewFragment"
        android:name="com.pratik.receiptsnap.presentation.contentViewer.FileViewerFragment"
        android:label="File Preview"
        tools:layout="@layout/fragment_file_viewer">
        <argument
            android:name="fileUrl"
            app:argType="string" />
        <argument
            android:name="mimeType"
            app:argType="string" />
        <action
            android:id="@+id/action_filePreviewFragment_to_organizeFragment"
            app:destination="@id/organizeFragment" />
    </fragment>

</navigation>