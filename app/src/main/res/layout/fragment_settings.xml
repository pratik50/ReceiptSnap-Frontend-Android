<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layout_marginTop="@dimen/_25sdp"
    android:layout_marginBottom="?attr/actionBarSize"
    android:background="@color/off_white"
    tools:context=".presentation.settings.SettingsFragment">

    <TextView
        android:id="@+id/tvSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Profile Information -->
    <LinearLayout
        android:id="@+id/sectionProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_card"
        android:padding="16dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSettings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/ic_user"
            app:tint="@android:color/darker_gray"
            android:contentDescription="Profile Icon"
            android:layout_marginEnd="12dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile information"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="go to next"
            android:src="@drawable/ic_next"/>
    </LinearLayout>

    <!-- App Preferences -->
    <LinearLayout
        android:id="@+id/sectionAppPreferences"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card"
        android:padding="16dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/sectionProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Preferences"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Scan Quality (High)\nDefault Save Location (Cloud)\nEnable Auto-Tagging"
                android:textSize="14sp"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@drawable/ic_lock"
                app:drawableTint="@android:color/darker_gray" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchPreferences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                app:thumbTint="@color/switch_thumb_color"
                app:trackTint="@color/switch_track_color"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Notifications -->
    <LinearLayout
        android:id="@+id/sectionNotifications"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card"
        android:padding="16dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/sectionAppPreferences"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notifications"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                app:thumbTint="@color/switch_thumb_color"
                app:trackTint="@color/switch_track_color"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sync Over Wi-Fi Only"
                android:textSize="14sp"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@drawable/ic_sync"
                app:drawableTint="@android:color/darker_gray" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchOverWifiONly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                app:thumbTint="@color/switch_thumb_color"
                app:trackTint="@color/switch_track_color"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="App Updates\nGet latest features &amp; improvements"
                android:textSize="14sp"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@drawable/ic_announcement"
                app:drawableTint="@android:color/darker_gray" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchNewFeatureNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                app:thumbTint="@color/switch_thumb_color"
                app:trackTint="@color/switch_track_color"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Help & Support -->
    <LinearLayout
        android:id="@+id/sectionHelp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_card"
        android:padding="16dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/sectionNotifications"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Help &amp; Support"
            android:textSize="16sp"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_help"
            app:drawableTint="@android:color/darker_gray"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:thumbTint="@color/switch_thumb_color"
            app:trackTint="@color/switch_track_color"/>
    </LinearLayout>

    <!-- Privacy Policy  -->
    <LinearLayout
        android:id="@+id/sectionPrivacy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_card"
        android:padding="16dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/sectionHelp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Privacy Policy"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_privacy"
            app:drawableTint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tvLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:textColor="@color/themeColor"
            android:textSize="16sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>