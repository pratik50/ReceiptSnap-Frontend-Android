<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layout_marginBottom="?attr/actionBarSize"
    android:background="@color/white"
    tools:context=".presentation.scan.ScanFragment">

        <!-- App Name -->
        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ReceiptSnap"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_26ssp"
            android:textStyle="bold"
            android:fontFamily="@font/splash_screen_font"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_50sdp" />

        <!-- App Name -->
        <TextView
            android:id="@+id/slogan_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drop your receipts here \n— they’ll find their place in Organize."
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12ssp"
            android:gravity="center"
            android:fontFamily="@font/splash_screen_font"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_name"
            android:layout_marginTop="@dimen/_10sdp"
            />

        <!-- Center Circular Logo -->
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_200sdp"
            android:id="@+id/logoContainer"
            app:lottie_fileName="upload_file_animation.json"
            app:layout_constraintTop_toBottomOf="@id/app_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnScan"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            />

        <!-- Scan Button -->
        <Button
            android:id="@+id/btnScan"
            android:layout_width="0dp"
            android:layout_height="@dimen/_45sdp"
            android:text="Scan Now"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            android:backgroundTint="@color/themeColor"
            android:textColor="@android:color/white"
            app:cornerRadius="@dimen/_40sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnUpload"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_60sdp"
            />

    <!-- Scan Button -->
    <Button
        android:id="@+id/btnUpload"
        android:layout_width="0dp"
        android:layout_height="@dimen/_45sdp"
        android:text="Upload"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        android:backgroundTint="@color/complementaryThemeColor"
        android:textColor="@android:color/white"
        app:cornerRadius="@dimen/_40sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_60sdp"
        android:layout_marginEnd="@dimen/_60sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_30sdp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
